@model School.Web.Data.Entities.Result

    @{
        ViewData["Title"] = "Create";
    }

    <h2>Create</h2>

    <h4>Result</h4>
    <hr />
    <div class="row">
        
           
       
        <div class="col-md-4">

            

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="StudentId" class="control-label"></label>
                    <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId">

                        <option value="">اختر</option>
                    </select>
                    <span asp-validation-for="Arabic" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Arabic" class="control-label"></label>
                    <input asp-for="Arabic" class="form-control add " onkeyup="add()" />
                    <span asp-validation-for="Arabic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="English" class="control-label"></label>
                    <input asp-for="English" class="form-control add " onkeyup="add()" />
                    <span asp-validation-for="English" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Maths" class="control-label"></label>
                    <input asp-for="Maths" class="form-control add" onkeyup="add()" />
                    <span asp-validation-for="Maths" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sociology" class="control-label"></label>
                    <input asp-for="Sociology" class="form-control add" onkeyup="add()" />
                    <span asp-validation-for="Sociology" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Total" class="control-label"></label>
                    <input asp-for="Total" class="form-control " readonly id="total" />
                    <span asp-validation-for="Total" class="text-danger"></span>




                </div>
                <div class="form-group">
                    <label asp-for="Success" class="control-label"></label>
                    <input asp-for="Success" class="form-control " readonly id="Success" />
                    <span asp-validation-for="Success" class="text-danger"></span>




                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />

                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

   





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



    <script>

        
        function add() {
            var sum = 0;
            $(".add").each(function () {
                var val = parseInt($(this).val())
                sum += (!isNaN(val) ? val : 0);

                
            });

            $('#total').val(sum);
            if (sum >= 50)
            {
                $('#Success').val('ناجح');
               
            }
            else
            {
                $('#Success').val('راسب');
            }
        }


    </script>

}